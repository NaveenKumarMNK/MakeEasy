<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FDFAF6"
    tools:context=".CreateRoomActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create\nRoom"
        android:textColor="#11324D"
        android:textSize="50sp"
        android:fontFamily="@font/poppins"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditTextLayoutOne"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#11324D"
            app:boxStrokeWidth="1dp"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Name"
            app:hintTextColor="#11324D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EdittextName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinslight"
                android:inputType="text"
                android:textColor="#11324D" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditTextLayouTwo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#11324D"
            app:boxStrokeWidth="1dp"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Department"
            app:hintTextColor="#11324D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EdittextDepartment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinslight"
                android:inputType="text"
                android:textColor="#11324D" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditTextLayouThree"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            android:layout_marginTop="20dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#11324D"
            app:boxStrokeWidth="1dp"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Subject"
            app:hintTextColor="#11324D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EdittextSubject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinslight"
                android:inputType="text"
                android:textColor="#11324D" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EditTextLayouFour"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            android:layout_marginTop="20dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#11324D"
            app:boxStrokeWidth="1dp"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Topic"
            app:hintTextColor="#11324D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EdittextTopic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinslight"
                android:inputType="text"
                android:textColor="#11324D" />
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/GetClassCode"
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:backgroundTint="#11324D"
                android:fontFamily="@font/poppinslight"
                android:includeFontPadding="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Get code"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="0dp" />
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:id="@+id/CodeView"
        android:fontFamily="@font/poppinslight"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/CreateClass"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#F6AE99"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:drawableTint="@color/white"
            android:fontFamily="@font/poppinslight"
            android:includeFontPadding="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Create"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="14dp" />
    </RelativeLayout>

</LinearLayout>