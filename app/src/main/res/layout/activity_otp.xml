<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFAF6"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/EmptyLayout"
        android:layout_height="80dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/SignInText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Verification"
            android:textColor="#11324D"
            android:textSize="50sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">


        <com.chaos.view.PinView
            android:id="@+id/PinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:inputType="number"
            android:itemBackground="@android:color/transparent"
            android:padding="15dp"
            android:textColor="#11324D"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cursorColor="#11324D"
            android:layout_centerHorizontal="true"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:itemHeight="50dp"
            app:itemRadius="6dp"
            app:itemSpacing="10dp"
            app:itemWidth="50dp"
            app:lineColor="#11324D"
            app:lineWidth="1.5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/VerifyButton"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#F6AE99"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:drawableTint="@color/white"
            android:fontFamily="@font/poppinslight"
            android:includeFontPadding="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Verify"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/NoCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinslight"
            android:text="Didn't receive the code ?"
            android:textColor="#C3C3C3"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ResendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/NoCode"
            android:fontFamily="@font/poppinslight"
            android:text=" Resend"
            android:textColor="#11324D"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:45"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:id="@+id/Time"
        android:textColor="#11324D"
        android:fontFamily="@font/poppinslight"/>
</LinearLayout>