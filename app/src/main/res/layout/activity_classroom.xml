<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDFAF6"
    android:padding="10dp"
    tools:context=".ClassroomActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/WelcomeLayout"
        android:background="@drawable/card_bgtwo">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classroom"
        android:textSize="40sp"
        android:id="@+id/Text"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"/>

           <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/ic_baseline_add_24"
               android:layout_alignParentBottom="true"
               android:layout_centerVertical="true"
               android:layout_marginBottom="16dp"
               android:layout_marginEnd="10dp"
               android:id="@+id/ClassButton"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Not yet joined any Room"
        android:textSize="20dp"
        android:fontFamily="@font/poppinslight"
        android:textStyle="normal"
        android:textColor="#11324D"
        android:id="@+id/NoRoom"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RoomsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/WelcomeLayout"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />

</RelativeLayout>