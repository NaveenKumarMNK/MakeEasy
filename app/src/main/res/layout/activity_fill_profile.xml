<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFAF6"
    android:padding="10dp"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".LoginActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:id="@+id/EmptyLayout"
           android:layout_height="80dp"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="20dp"
           android:layout_marginStart="10dp">

           <TextView
               android:id="@+id/SignInText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppins"
               android:text="Profile"
               android:textColor="#11324D"
               android:textSize="50sp"
               android:textStyle="bold" />
       </RelativeLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/EditTextLayoutOne"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               app:boxCornerRadiusBottomEnd="12dp"
               app:boxCornerRadiusBottomStart="12dp"
               app:boxCornerRadiusTopEnd="12dp"
               app:boxCornerRadiusTopStart="12dp"
               app:boxStrokeColor="#11324D"
               app:boxStrokeWidth="1dp"
               app:endIconMode="clear_text"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:hint="Name"
               app:hintTextColor="#11324D">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/EdittextName"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:fontFamily="@font/poppinslight"
                   android:inputType="text"
                   android:textColor="#11324D" />
           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/EditTextLayoutFive"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_marginTop="15dp"
               app:boxCornerRadiusBottomEnd="12dp"
               app:boxCornerRadiusBottomStart="12dp"
               app:boxCornerRadiusTopEnd="12dp"
               app:boxCornerRadiusTopStart="12dp"
               app:boxStrokeColor="#11324D"
               app:boxStrokeWidth="1dp"
               app:endIconMode="clear_text"
               app:hintEnabled="true"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:hint="Gender"
               app:hintTextColor="#11324D">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/EdittextGender"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:fontFamily="@font/poppinslight"
                   android:inputType="text"
                   android:textColor="#11324D" />
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/EditTextLayoutTwo"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_marginTop="15dp"
               app:boxCornerRadiusBottomEnd="12dp"
               app:boxCornerRadiusBottomStart="12dp"
               app:boxCornerRadiusTopEnd="12dp"
               app:boxCornerRadiusTopStart="12dp"
               app:boxStrokeColor="#11324D"
               app:boxStrokeWidth="1dp"
               app:endIconMode="clear_text"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:hint="Rollnumber"
               app:suffixText="Ex.,19BCT030"
               app:hintTextColor="#11324D">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/EdittextRollno"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:fontFamily="@font/poppinslight"
                   android:inputType="text"
                   android:textColor="#11324D" />
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/EditTextLayoutThree"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_marginTop="15dp"
               app:boxCornerRadiusBottomEnd="12dp"
               app:boxCornerRadiusBottomStart="12dp"
               app:boxCornerRadiusTopEnd="12dp"
               app:boxCornerRadiusTopStart="12dp"
               app:boxStrokeColor="#11324D"
               app:boxStrokeWidth="1dp"
               app:endIconMode="clear_text"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:hint="Department"
               app:suffixText="Ex.,CT"
               app:hintTextColor="#11324D">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/EdittextDepartment"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:fontFamily="@font/poppinslight"
                   android:inputType="text"
                   android:textColor="#11324D" />
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/EditTextLayoutFour"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_marginTop="15dp"
               app:boxCornerRadiusBottomEnd="12dp"
               app:boxCornerRadiusBottomStart="12dp"
               app:boxCornerRadiusTopEnd="12dp"
               app:boxCornerRadiusTopStart="12dp"
               app:boxStrokeColor="#11324D"
               app:boxStrokeWidth="1dp"
               app:endIconMode="clear_text"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:hint="Batch"
               app:suffixText="Ex.,2019-2022"
               app:hintTextColor="#11324D">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/EdittextBatch"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:fontFamily="@font/poppinslight"
                   android:inputType="text"
                   android:textColor="#11324D" />
           </com.google.android.material.textfield.TextInputLayout>

       </LinearLayout>
       <RelativeLayout
           android:layout_marginTop="50dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <com.google.android.material.button.MaterialButton
               android:id="@+id/InButton"
               android:layout_width="200dp"
               android:layout_height="65dp"
               android:layout_centerHorizontal="true"
               android:backgroundTint="#F6AE99"
               android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
               android:drawableTint="@color/white"
               android:fontFamily="@font/poppinslight"
               android:includeFontPadding="false"
               android:paddingLeft="20dp"
               android:paddingRight="20dp"
               android:text="Sign up"
               android:textAlignment="textStart"
               android:textColor="@color/white"
               android:textSize="15sp"
               android:textStyle="bold"
               app:cornerRadius="14dp" />
       </RelativeLayout>

   </LinearLayout>
</ScrollView>