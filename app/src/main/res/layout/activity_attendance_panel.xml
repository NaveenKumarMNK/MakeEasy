<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FDFAF6"
    tools:context=".AttendancePanelActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Attendance"
        android:textColor="#11324D"
        android:textSize="50sp"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/PointOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinslight"
            android:lineSpacingExtra="5dp"
            android:text="1. Generate code by clicking the below button"
            android:textAlignment="textStart"
            android:textColor="#C3C3C3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/PointOne"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinslight"
            android:lineSpacingExtra="5dp"
            android:text="2. Ask the students to enter the generated code to mark their Attendance"
            android:textAlignment="textStart"
            android:textColor="#C3C3C3"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/GenerateCodeButton"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#F6AE99"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:drawableTint="@color/white"
            android:fontFamily="@font/poppinslight"
            android:includeFontPadding="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Get Code"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="14dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinslight"
        android:textStyle="bold"
        android:id="@+id/TextCode"
        android:textColor="#11324D"/>
</LinearLayout>